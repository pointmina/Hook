<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_title"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hook"
        tools:targetApi="31">

        <activity
            android:name=".ui.view.WebViewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.HookDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.SettingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.SelectedTagActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.AddHookActivity"
            android:exported="false"
            android:parentActivityName=".ui.view.HomeActivity" />
        <activity
            android:name=".ui.view.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.view.SelectedTagActivity"
            android:exported="false"
            tools:ignore="DuplicateActivity" />
        <activity
            android:name=".ui.view.SplashView"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>